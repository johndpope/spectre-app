<% if not locals[:edit] %>
  <%= render 'incident_monitors/summarize',
        incident_monitor: bid_layering_monitor,
        desc: JSON.parse(bid_layering_monitor.desc),
        settings: JSON.parse(bid_layering_monitor.settings),
        active: bid_layering_monitor.active %>
<% else %>
  <%= render 'incident_monitors/bid_layering',
        incident_monitor: bid_layering_monitor,
        desc: JSON.parse(bid_layering_monitor.desc),
        settings: JSON.parse(bid_layering_monitor.settings) %>
<% end %>