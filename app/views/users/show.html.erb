<% provide(:title, @user.name) %>
<h1><%= @user.name %></h1>
<div class="row">
  <div class="span4">
    <p>Joined: <%= @user.created_at %></p>
  </div>
  <div class="span8">
    <h3>Activity</h3>
    <% if @user.actions.any? %>  
      <%= will_paginate @actions %>
      <ol class="actions">
        <%= render @actions %>
      </ol>
      <%= will_paginate @actions %>
    <% else %>
      <span class="content">None</span>
    <% end %>
  </div>
</div>