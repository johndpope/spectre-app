<% provide(:title, 'Edit User') %>
<div class="row">
  <div class="span10 offset1">
    <h1>Update your profile</h1>
    <div class="form-horizontal well">
      <%= render 'shared/num_errors' %>
      <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>
        <div class="control-group">
          <div class="controls">
            <%= f.submit "Save Changes", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>   
    </div>
  </div>
</div>

