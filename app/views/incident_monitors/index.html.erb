<% content_for :javascript_includes do %>
  <%= javascript_include_tag "monitor_settings.js" %>
<% end %>

<% provide(:title, 'Incident Monitors') %>
<h1>Incident Monitors</h1>
<% if @incident_monitors.empty? %>
  <h4>None Found</h4>
<% else %>
  <div class="row" style="margin-top:20px">
    <div class="span12">
      <div class="accordian" id="monitors">
        <table class="table summary monitor-hover">
          <tbody>
            <%= render @incident_monitors, locals: { edit: false } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
